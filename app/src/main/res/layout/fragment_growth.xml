<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorTraffic">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/traffic"
            android:tint="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_group_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtReportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow-up Examination"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/txtReportContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact a local doctor or health officer"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>
    </LinearLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/dropChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreyDark"
        android:textStyle="bold"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/colorGreyDark"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="10dp">

        <de.welthungerhilfe.cgm.scanner.ui.views.VerticalTextView
            android:id="@+id/txtYAxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/axis_y"
            android:textColor="@color/colorGreyDark"
            android:rotation="180"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txtYAxis"
            android:layout_above="@+id/txtXAxis" />

        <TextView
            android:id="@+id/txtXAxis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/axis_x"
            android:textColor="@color/colorGreyDark"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>
